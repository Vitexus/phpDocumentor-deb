#!/bin/sh
# postinst script for phpdocumentor
set -e

. /usr/share/debconf/confmodule

case "$1" in
    configure)
        if [ -z $WEB_USER ]; then
	. /usr/lib/composer-debian/webusergroup
	fi
	su - ${WEB_USER} -s /bin/bash -c "composer config --no-plugins allow-plugins.symfony/flex true"
	composer-debian phpdocumentor
	chmod 777 /usr/share/phpdocumentor/phpDocumentor/var/log
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac




#DEBHELPER#

exit 0
